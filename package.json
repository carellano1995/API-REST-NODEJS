{
  "name": "api-rest-nodejs",
  "version": "0.1.0",
  "description": "Api rest with NodeJS",
  "author": "Carellano",
  "main": "index.js",
  "scripts": {
    "test": "grunt test",
    "build": "grunt build",
    "all": "npm run build && npm run test"
  },
  "dependencies": {
    "adaro": "0.1.10",
    "construx": "^1.0.0",
    "construx-copier": "^1.0.0",
    "eslint": "^1.10.3",
    "express": "^4.12.2",
    "mongoose-bcrypt": "^1.6.0",
    "mongoose-paginate-v2": "^1.0.24",
    "dustjs-helpers": "1.5.0",
    "dustjs-linkedin": "2.5.1",
    "mongoose-timestamp": "^0.6.0",
    "mongoose": "^5.5.2",
    "kraken-js": "^2.0.0",
    "connect-mongo": "1.3.2",
    "engine-munger": "0.2.8",
    "jsonwebtoken": "7.1.9",
    "express-session": "1.14.0",
    "cookie-parser": "1.4.1"
  },
  "devDependencies": {
    "grunt": "^0.4.5",
    "grunt-apidoc": "^0.11.0",
    "grunt-browserify": "^3.8.0",
    "grunt-config-dir": "^0.3.2",
    "grunt-contrib-clean": "^0.6.0",
    "grunt-contrib-jshint": "^1.0.0",
    "grunt-contrib-less": "^1.3.0",
    "grunt-copy-to": "0.0.12",
    "grunt-dustjs": "^1.3.0",
    "grunt-eslint": "^17.3.2",
    "grunt-jscs": "3.0.1",
    "grunt-jsdoc": "^2.0.0",
    "grunt-localizr": "0.2.4",
    "grunt-mocha-cli": "^1.14.0",
    "grunt-newer-explicit": "^0.9.6",
    "grunt-parallelize": "^1.1.7",
    "grunt-uncss": "0.6.1",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "4.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "grunt-cli": "^0.1.13",
    "mocha": "^1.18.0",
    "prettier": "^1.17.0",
    "supertest": "^0.9.0"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "ecmaFeatures": {
      "modules": true,
      "arrowFunctions": true,
      "classes": true
    },
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "no-magic-numbers": [
        "error",
        {
          "enforceConst": true,
          "ignoreArrayIndexes": true,
          "ignore": [
            -1,
            0,
            1
          ]
        }
      ],
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "semi": true,
    "tabWidth": 2,
    "enforceConst": true,
    "useTabs": false
  }
}
